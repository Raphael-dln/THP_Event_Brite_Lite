<div class="container-fluid text-center">
  <h2 class="texte-bienvenue mt-5">Create a new event</h2>
  <div class="container-fluid">
    <%= form_for(:events,  url:(events_path), action: 'create', method: :post) do |f| %>
      <div class="field">
        <%= f.hidden_field :admin_id, :value => current_user.id %>
      </div><br />

      <div class="field">
        <%= f.label "Title" %><br />
        <%= f.text_field :title, autofocus: true, autocomplete: :title %>
      </div><br />

      <div class="field">
        <%= f.label "Description" %> <br />
        <%= f.text_area :description, autocomplete: :description %>
      </div><br />

      <div class="field">
        <%= f.label "Location" %> <br />
        <%= f.text_field :location, autocomplete: :location %>
      </div><br />

      <div class="field">
        <%= f.label "Start-date" %> <br />
        <%= f.datetime_field :start_date, autocomplete: :start_date %>
      </div><br />
      
      <div class="field">
        <%= f.label "Duration (in minutes)"%> <br />
        <%= f.text_field :duration, placeholder: "It must be a multiple of 5" %>
      </div><br />

      <div class="field">
        <%= f.label "Price" %> <br />
        <%= f.number_field :price, autocomplete: :price %>
      </div><br />

      <div class="actions">
          <%= f.submit "Register", class:"btn btn-outline-primary btn-sm" %>
      </div>
      
    <% end %>
  </div>
  <div class="mt-5 container-fluid">
    <%= link_to "Back", :back %>
  </div>
</div>
