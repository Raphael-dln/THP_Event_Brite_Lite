<div class="container-fluid text-center">
  <div class="texte-bienvenue">
    <h1>Edit the event</h1>
  </div>
  <%= form_for @event do |f| %>
    <div class="form-group">
      <label> Title of the event</label>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label> Description</label>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label> Location</label>
      <%= f.text_field :location, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label> Start date</label>
      <%= f.datetime_field :start_date, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label> Duration (in minutes)</label>
      <%= f.text_field :duration, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label> Price</label>
      <%= f.number_field :price, class: 'form-control' %>
    </div>
    <div class="form-group">
    <button type="submit" class="btn" style="background-color: #ffc0cb">Update your event</button>
    </div>
  <% end %>
</div>
