<div class="card">
  <div class="card-header">
    Your dashboard
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @current_user.full_name%></h5>
    <p class="card-text"><%=@current_user.description%></p>
    <%=link_to "Edit profile", edit_user_path, type:"button", class: "btn btn-outline-primary btn-sm" %>
    <%=link_to "Edit login", edit_user_registration_path,type:"button", class:"btn btn-outline-primary btn-sm"%>
  </div>
</div>
<div class="container-fluid text-center">
  <p>Contact here: <%=@current_user.email %></p>
</div>

<div class="card">
  <div class="card-header">
    Event(s) created by <%=current_user.full_name%> 
  </div>
  <div class="card-body">
    <% Event.where(admin_id: current_user.id).each do |event| %>
      <h5 class="card-title"><%= link_to event.title, event_path(event.id)%></h5>
    <% end %>
  </div>
</div>
<div class="card">
  <div class="card-header">
    Event(s) attended by <%=current_user.full_name%>
  </div>
  <div class="card-body">
    <% Attendance.where(guest_id: current_user.id).each do |attendance| %>
      <h5 class="card-title"><%= link_to attendance.event.title, event_path(attendance.event.id)%></h5>
    <% end %>
  </div>
</div>
